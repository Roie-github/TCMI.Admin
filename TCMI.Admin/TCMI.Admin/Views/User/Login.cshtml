@model TCMI.Admin.Models.User


@{
    ViewBag.Title = "Sign In";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/default.css" rel="stylesheet" />
<script src='https://www.google.com/recaptcha/api.js'></script>

<header>
    <img src="~/Images/logo.png" />
</header>
<div class="container">
    <div class="page-header"><h1>Triumphant Church Ministries - Crossroads Admin</h1></div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="panel panel-primary">
            <div class="panel-heading">Sign In</div>

            <div class="panel-body">
                @Html.Raw(ViewBag.Message)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)

                    <input class="form-control" placeholder="Username" type="text" id="username" name="username" />
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)

                    <input class="form-control" placeholder="Password" type="password" id="pass" name="pass" />
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="6LfawgoTAAAAAL-VKTehahLsJ0fJ0qRSSj7tG_nL"></div>
                </div>
            </div>
            <div class="panel-footer">
                <p>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </p>
            </div>
        </div> <!--end panel-->

    }


</div>
