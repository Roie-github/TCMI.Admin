@model TCMI.Admin.Models.EventMeta

@{
    ViewBag.Title = "Remove";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/default.css" rel="stylesheet" />
<link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />

<div class="container">
    <div class="page-header"><h2>Remove Prayer Request</h2><h3>Are you sure you want to delete this?</h3></div>
    <div class="panel panel-primary">
        <div class="panel-heading">Event</div>
        <div class="panel-body">

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Venue)
                @Html.EditorFor(model => model.Venue)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DateOfEvent)
                @Html.EditorFor(model => model.DateOfEvent)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Time)
                @Html.EditorFor(model => model.Time)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Expired)
                @Html.EditorFor(model => model.Expired)
            </div>
        </div>

        <div class="panel-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                </p>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("input[type=text]").addClass("form-control").attr("disabled", true);
        $("input[type=datetime]").addClass("form-control").attr("disabled", true);
        $("textarea").addClass("form-control").attr("disabled", true);
        $("select").addClass("form-control").attr("disabled", true);
    });
</script>
